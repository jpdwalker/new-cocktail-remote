<%= render 'shared/navbar' %>

<div class="home-banner">
  <h1>Welcome to Joe's</h1>
  <h3>The world's best cocktails</h3>
</div>
<div class="container">
<h1>Drinks menu</h1>
<ul>
  <% @cocktails.each do |cocktail| %>
    <li class="card p-5">
      <%= link_to cocktail.name, cocktail  %>
      <%= link_to "delete", cocktail,
      method: :delete,
      data: { confirm: "Are you sure you want to delete this cocktail?" }  %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add new cocktail', new_cocktail_path %>
</div>


