<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="d-flex display-inline-block">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="d-flex display-inline-block">
  <ul class="justify-content-center">
    <% @doses.each do |dose| %>
      <li>
        <%= @cocktail.name %>
        <br>
        <%= dose.description %>
        <br>
        <%= dose.ingredient.name %>
        <br>
        <%= link_to "delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this dose?" }  %>
      </li>
    <% end %>
  </ul>
  </div>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'Back', cocktails_path  %>
</div>
